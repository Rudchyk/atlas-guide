{{#content.componentStats}}
    <div class="b-atlas-postcard" role="complementary">
        <div class="b-atlas-postcard__item">
            <section class="b-atlas-postcard__section">
                <figure class="b-component-stat-digit _primary">
                    <div class="b-component-stat-digit__digit">
                        {{totalDeclarations}}
                    </div>
                    <figcaption class="b-component-stat-digit__details">
                        <div role="heading" aria-level="3" class="b-component-stat-digit__title">
                            Total declarations
                        </div>
                    </figcaption>
                </figure>
                <svg width="300" height="80" viewBox="0 0 300 80" class="b-component-stat-digit b-component-stat-graph" aria-labelledby="component-graph-title">
                    <title id="component-graph-title">Declaration sets size through the file</title>
                    <defs>
                        <filter id="blur-filter" x="0" y="0">
                            <feGaussianBlur in="SourceGraphic" stdDeviation="3"/>
                        </filter>
                    </defs>
                    <g class="b-component-stat-graph__line">
                        <path d="{{ruleSetsLine}}" stroke="currentColor" fill="none"/>
                        <g class="b-component-stat-graph__shadow">
                            <path d="{{ruleSetsLine}}" stroke="currentColor" fill="none" filter="url(#blur-filter)"/>
                        </g>
                    </g>
                </svg>
            </section>
        {{#stats}}
            <section class="b-atlas-postcard__section">
                {{#important}}
                    <figure class="b-component-stat-digit">
                        <div class="b-component-stat-digit__digit">
                            {{total}}
                        </div>
                        <figcaption class="b-component-stat-digit__details">
                            <div role="heading" aria-level="3" class="b-component-stat-digit__title">
                                {{#pluralize}}{{values.length}},Important<br>declaration,Important<br>declarations{{/pluralize}}
                            </div>
                            {{#values.length}}
                            <div role="list" class="b-component-stat-digit__popup">
                                {{#values}}
                                    <div role="listitem" class="b-component-stat-digit__item">{{prop}}</div>
                                {{/values}}
                            </div>
                            {{/values.length}}
                        </figcaption>
                    </figure>
                {{/important}}
                {{#vendorPrefix}}
                    <figure class="b-component-stat-digit">
                        <div class="b-component-stat-digit__digit">
                            {{total}}
                        </div>
                        <figcaption class="b-component-stat-digit__details">
                            <div role="heading" aria-level="3" class="b-component-stat-digit__title">
                                {{#pluralize}}{{values.length}},Vendor<br>prefix,Vendor<br>prefixes{{/pluralize}}
                            </div>
                            {{#values.length}}
                                <div role="list" class="b-component-stat-digit__popup">
                                    {{#values}}
                                        <div role="listitem" class="b-component-stat-digit__item">{{prop}}{{value}}</div>
                                    {{/values}}
                                </div>
                            {{/values.length}}
                        </figcaption>
                    </figure>
                {{/vendorPrefix}}
                {{#floats}}
                    <figure class="b-component-stat-digit">
                        <div class="b-component-stat-digit__digit">
                            {{total}}
                        </div>
                        <figcaption class="b-component-stat-digit__details">
                            <div role="heading" aria-level="3" class="b-component-stat-digit__title">
                                {{#pluralize}}{{values.length}},Float<br>declared,Floats<br>declared{{/pluralize}}
                            </div>
                            {{#values.length}}
                                <div role="list" class="b-component-stat-digit__popup">
                                    {{#values}}
                                        <div role="listitem" class="b-component-stat-digit__item">{{value}}</div>
                                    {{/values}}
                                </div>
                            {{/values.length}}
                        </figcaption>
                    </figure>
                {{/floats}}
            </section>
        {{/stats}}
            <section class="b-atlas-postcard__section b-atlas-postcard__section_last">
                <div class="b-component-stat-list" role="list">
                {{#componentProfileDetails}}
                    <div role="listitem"><span class="b-component-stat-list__total">{{total}}</span> {{name}}</div>
                {{/componentProfileDetails}}
                </div>
            </section>
        </div>

        <div class="b-atlas-postcard__item">
            <section class="b-component-stat-structure">
                <div role="heading" aria-level="3" class="b-component-stat-structure__title">
                    Component structure
                </div>
                <div class="b-component-stat-structure__nodes" role="list">
                    {{>componentstructure}}
                </div>
            </section>
        </div>
    </div>
{{/content.componentStats}}
